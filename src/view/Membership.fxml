<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.*?>

<VBox alignment="CENTER"  styleClass="background" prefHeight="400.0" prefWidth="600.0" spacing="20"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MembershipController">
    
    
    <GridPane alignment="CENTER" >
        <Label GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="label-header" text="Personnal Details" />
        <Label GridPane.columnIndex="0" GridPane.rowIndex="1" text="Name:"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="NameTf" text=""/>
        <Label GridPane.columnIndex="0" GridPane.rowIndex="2" text="Email:"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="EmailTf" text=""/>
        <Label GridPane.columnIndex="0" GridPane.rowIndex="3" text="Phone:"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="3" fx:id="PhoneTf" text=""/>
        <Label GridPane.columnIndex="0" GridPane.rowIndex="4" text="Address"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="4" fx:id="AddressTf" text=""/>
    </GridPane>
    <Separator/>
    <GridPane alignment="CENTER" >
        <Label GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="label-header" text="Membership Details" />
        <Label GridPane.columnIndex="0" GridPane.rowIndex="1" text="ID"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="IDTf" text=""/>
        <Label GridPane.columnIndex="0" GridPane.rowIndex="2" text="Expense:"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="ExpenseTf" text=""/>
        <Label GridPane.columnIndex="0" GridPane.rowIndex="3" text="Type:"/>
        <Text styleClass="Text-type" GridPane.columnIndex="1" GridPane.rowIndex="3" fx:id="TypeTxt" text=""/>
    </GridPane>
    <HBox alignment="CENTER" spacing="10" >
        <Button styleClass="button" text="Add" fx:id="AddBtn" onAction="#handleadd" />
        <Button styleClass="button" text="Update" fx:id="UpdateBtn" onAction="#handleupdate" />
        <Button styleClass="button" text="Close" fx:id="CloseBtn" onAction="#handleclose" />
    </HBox>
    <padding>
        <Insets top="10" bottom="10" left="5" right="5" />
    </padding>
    <stylesheets>
        <URL value="@mmsfx.css"/>
    </stylesheets>
</VBox>
